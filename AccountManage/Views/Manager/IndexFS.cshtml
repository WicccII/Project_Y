@model IEnumerable<AccountManage.Models.User>
@{
    ViewData["Title"] = "IndexFS";
}
@{
    Layout = "_StaffLayout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["FailMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["FailMessage"]
    </div>
}
@if (@Model == null)
{
    <p>Bạn chưa có bài post</p>
}
else
{
    <table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Zip Code</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Username</th>
            <th>ID Card/Passport Number</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@item.Gender</td>
                <td>@item.Address</td>
                <td>@item.ZipCode</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.Username</td>
                <td>@item.IdCardPassportNumber</td>
                <td><a class="button" asp-action="StaffEdit" style="display: inline;" asp-route-id="@item.Id">Update</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Logout" style="display: inline;">Logout</a>
}