@model AccountManage.Models.User
@{
    ViewData["Title"] = "ConfirmEmailForm";
}
<h2>Confirm Email</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["FailMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["FailMessage"]
    </div>
}
<form asp-action="ConfirmEmail">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="OTP" class="control-label"></label>
        <input asp-for="OTP" class="form-control" />
        <span asp-validation-for="OTP" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Confirm" class="btn btn-primary" />
    </div>
</form>
<div class="form-group">
        <a asp-action="CheckSendOTP" style="display: inline;">Send Again</a>
    </div>